<section class="wraper_bg-bright extra_packages">
  <h1><span>EXTRA</span> PACKAGES</h1>
  <div class="polosochka2"></div>

  <article class="packs-cont cbp-so-scroller" style="text-align:left">
    <%= form_tag(carts_path, method: "post") do %>
      <div class="panel-body">
        <div class="row-fluid">
          <div class="span9">
            <div class="extra_banner">
              <div class="own_extra">
                <span class="extra_info">Silahkan pilih paket extra yang akan diikutsertakan</span>
                <input class="pack-order float-right-fixed margn" type="submit" value="Lanjut >>">
              </div>
            </div>
             <div class="row-fluid">
              <% if(flash[:alert]) %>
                <div id="error_explanation">
                  <div class="alert alert-block alert-danger fade in ">
                    <%= flash[:alert] %>
                  </div>
                </div>
              <% end %>
            </div>
            <br/>
            <div class="grd_masonry">
              <% @memberships.each_with_index do |membership,index| %>
                <div class="grid_packages">
                  <div class="head_pack red vers add_padding">
                    <div class="roundedOne2 versi2">
                      <% checked = @order.items.map(&:membership_id).include?(membership.id) %>
                      <%= check_box_tag 'membership_ids[]', membership.id, checked, id: "member_#{index}" %>
                      <label for="member_<%= index %>"></label>
                    </div>
                    <span class="title_ord italic">BiG</span> 
                    <span class="title_ord"><%= membership.name %></span>
                    <div>
                      Rp. <b><%= number_to_currency(membership.price_month,{unit: '', precision: 0}) %>,-</b>
                    </div>
                  </div>
                  <table class="table table-bordered padding0">
                    <tbody>
                      <% membership.unit_items.each do |item| %>
                        <tr>
                          <td>
                            <% if item.status_hd %>
                              <span class="hd">HD</span>
                            <% end %>
                            <span class="name_channel"><%= item.name %></span>
                          </td>
                          <td>
                            <%= image_tag item.logo.url(:thumb), { class: "small_image", alt: item.logo.name }  %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              <% end %>
            </div>
            <div class="extra_banner">
              <div class="own_extra">
                <span class="extra_info">Silahkan pilih paket extra yang akan diikutsertakan</span>
                <input class="pack-order float-right-fixed margn" type="submit" value="Lanjut >>">
              </div>
            </div>
          </div>
          <div class="span3">
            <div class="grid_packages_decode white46">
              <div class="head_pack_gray radius_top">
                <span>PAKET YANG DIPESAN</span>
              </div>
              <table class="table table-bordered padding0 decode2">
                <tbody>
                  <tr>
                    <td>
                      <% other_package_id = 0 %>
                      <% @order.items.each do |item| %>
                        <% if item.membership_category == 'Premium' %>
                          <script>
                             var current_package_name = '<%= item.membership.name %>';
                          </script>
                          <div class="pack-info">
                            <div class="big-decode font_red">BiG</div>
                            <span class="small-decode font_red"><%= item.membership.name %></span>
                            <div class="br-small"></div>
                            <div class="pack-i-line">
                              Rp.
                              <span class="prc">
                                <%= number_to_currency(item.subtotal,{precision: 0, unit: ''}) %>
                              </span>
                            </div>
                          </div>
                        <% elsif item.membership_category == 'Extra' %>
                          <div class="pack-info additional-pack">
                            <span class="small-decode font_red"><%= item.membership.name %></span>
                            <div class="br-small"></div>
                            <div class="pack-i-line">
                              Rp.
                              <span class="prc">
                                <%= number_to_currency(item.subtotal,{precision: 0, unit: ''}) %>
                              </span>
                            </div>
                          </div>
                        <% else %>
                          <% other_package_id = item.membership_id %>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </article>
</section>
