<% if @unit_item.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-block alert-danger fade in ">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Warning!</strong> <%= pluralize(@unit_item.errors.count, "error") %>
      <% @unit_item.errors.full_messages.each do |msg| %>
      <diV>
        <%= msg %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :status_hd, 'High Definition', class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.check_box :status_hd %>
  </div>
</div>
<div class="form-group">
  <%= f.label :free, 'Free Channel', class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.check_box :free %>
  </div>
</div>
<div class="form-group">
  <%= f.label :logo, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= image_tag @unit_item.logo.url(:medium) %>
    <%= f.file_field :logo %>
  </div>
</div>
<div class="form-group">
  <%= f.label 'Channel Category', class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.select :group_item_id, options_from_collection_for_select(@group_items, :id, :name), {prompt: "Select Channel Category"}, class: "form-control" %>
  </div>
</div>
<div class="pull-right">
  <%= f.submit 'Save', class: "btn btn-bricky" %>
  <%= link_to '<i class="icon-circle-arrow-left"></i> Back'.html_safe, manage_group_items_path, class: "btn btn-dark-grey" %>
</div>

