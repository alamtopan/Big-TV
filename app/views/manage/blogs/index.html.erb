<%= render layout: 'shareds/back_office/prepare_table', 
           locals: {
                     table_name:  'News', 
                     button_name: 'News'
                   } do %>
  <table class="table table-hover" id="sample-table-1">
    <thead>
      <tr>
        <th>No</th>
        <th>Title</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @blogs.each_with_index do |blog,index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= blog.title %></td>
          <td>
            <%= render partial: 'shareds/back_office/action_buttons', locals: {resource: blog, confirmation: "#{blog.title} will be deleted, are you sure ?"} %>
            </div>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @blogs %>
  </div>
<% end %>