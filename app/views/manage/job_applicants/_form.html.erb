<% if @job_applicant.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-block alert-danger fade in ">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Warning!</strong> <%= pluralize(@job_applicant.errors.count, "error") %>
      <% @job_applicant.errors.full_messages.each do |msg| %>
      <diV>
        <%= msg %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="form-group">
  <%= f.label :job_apply, class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= f.select(:position, options_from_collection_for_select(@jobs, :id, :position, (@job_applicant ? @job_applicant.position : '')),{prompt: '---Select Jobs----'},{class: 'form-control'}) %>
  </div>
</div>
<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-4">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :email, class: "col-sm-2 control-label" %>
  <div class="col-sm-3">
    <%= f.text_field :email, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <label class="col-sm-2 control-label">CV File</label>
  <div class="col-sm-9">
    : <%= link_to "DOWNLOAD ATTACHMENT", download_manage_job_applicant_path(@job_applicant) if @job_applicant.file_resume.present? %>
  </div>
</div>
<div class="form-group">
  <%= f.label :resume, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_area :resume, class: "ckeditor form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :status, class: "col-sm-2 control-label" %>
  <div class="col-sm-6">
    <% @status.each do |status|%>
      <%= f.radio_button :status, status %>
      <b><%= status %></b>
      &nbsp; &nbsp;  &nbsp;
    <% end %>
  </div>
</div>
<div class="pull-right">
  <%= f.submit 'Save', class: "btn btn-bricky" %>
  <%= link_to '<i class="icon-circle-arrow-left"></i> Back'.html_safe, manage_job_applicants_path, class: "btn btn-dark-grey" %>
</div>
