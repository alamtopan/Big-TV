<div class="row">
  <div class="col-sm-12">
    <ol class="breadcrumb">
      <li>
        <i class="clip-home-3"></i>
        <%= link_to "Dashboard", root_path %>
      </li>
      <li class="active">
        Membership
      </li>
      <li class="search-box">
        <form class="sidebar-search">
          <div class="form-group">
            <input type="text" placeholder="Start Searching..." data-default="130">
            <button class="submit">
              <i class="clip-search-3"></i>
            </button>
          </div>
        </form>
      </li>
    </ol>
    <div class="page-header">
      <h1>Show Membership</h1>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="icon-external-link-sign"></i>
        Membership
        <div class="panel-tools">
          <a class="btn btn-xs btn-link panel-expand" href="#">
            <i class="icon-resize-full"></i>
          </a>
          <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
          </a>
        </div>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <%= label_tag :name, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.name %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <%= label_tag :category_id, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.category.name.to_s.titleize if @membership.category %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <%= label_tag :description, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.description %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <%= label_tag :publish_on, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.publish_on %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <%= label_tag :expire_on, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.expire_on %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <%= label_tag :version, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.version %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <%= label_tag :position, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.position %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <%= label_tag :is_published, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.is_published %>
          </div>
        </div>
        <br/>
        <div class="form-group">
          <%= label_tag :is_featured, nil, class: "col-sm-2 control-label" %>
          <div class="col-sm-9">
            <%= @membership.is_featured %>
          </div>
        </div>
        <div class="form-group">
          <div class="pull-right">
            <%= link_to '<i class="icon-circle-arrow-left"></i> Back'.html_safe, manage_memberships_path, class: "btn btn-dark-grey" %>
            <%= link_to '<i class="icon-wrench"></i> Edit'.html_safe, edit_manage_membership_path(@membership), class: "btn btn-purple" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
