<% if @job.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-block alert-danger fade in ">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Warning!</strong> <%= pluralize(@job.errors.count, "error") %>
      <% @job.errors.full_messages.each do |msg| %>
      <diV>
        <%= msg %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="form-group">
  <%= f.label :position, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :position, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :division, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :division, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :requirement, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_area :requirement, class: "ckeditor form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :author, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :author, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :publish_on, class: "col-sm-2 control-label" %>
  <div class="col-sm-3">
    <div class="input-group">
      <%= f.text_field :publish, class: "form-control datepicker", data: {"date-format" => "yyyy-mm-dd", "date-viewmode" => "years"} %>
      <span class="input-group-addon"> <i class="icon-calendar"></i> </span>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.label :expire_on, class: "col-sm-2 control-label" %>
  <div class="col-sm-3">
    <div class="input-group">
      <%= f.text_field :unpublish, class: "form-control datepicker", data: {"date-format" => "yyyy-mm-dd", "date-viewmode" => "years"} %>
      <span class="input-group-addon"> <i class="icon-calendar"></i> </span>
    </div>
  </div>
</div>
<div class="pull-right">
  <%= f.submit 'Save', class: "btn btn-bricky" %>
  <%= link_to '<i class="icon-circle-arrow-left"></i> Back'.html_safe, manage_jobs_path, class: "btn btn-dark-grey" %>
</div>
