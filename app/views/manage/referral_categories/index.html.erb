<%= render layout: 'shareds/back_office/prepare_table', 
           locals: {
                     table_name:  'Referral Categories', 
                     button_name: 'Referral Categories'
                   } do %>
  <table class="table table-hover" id="sample-table-1">
    <thead>
      <tr>
        <th>No</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @referral_categories.each_with_index do |referral_category,index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= referral_category.name %></td>
          <td>
            <%= render partial: 'shareds/back_office/action_buttons', locals: {resource: referral_category, confirmation: "#{referral_category.name} will be deleted, are you sure ?"} %>
            </div>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @referral_categories %>
  </div>
<% end %>