<%= render layout: 'shareds/back_office/prepare_table', 
           locals: {
                     table_name:  'Reg Promos', 
                     button_name: 'Reg Promos'
                   } do %>
  <table class="table table-hover" id="sample-table-1">
    <thead>
      <tr>
        <th>Subject</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Created At</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @reg_promos.each_with_index do |reg_promo,index| %>
        <tr>
          <td><%= reg_promo.subject %></td>
          <td><%= reg_promo.name %></td>
          <td><%= reg_promo.phone %></td>
          <td><%= reg_promo.email %></td>
          <td><%= reg_promo.created_at.in_time_zone('Jakarta').strftime('%d %b %Y at %H:%M') %></td>
          <td>
            <%= render partial: 'shareds/back_office/action_buttons', locals: {resource: reg_promo, confirmation: "#{reg_promo.name} will be deleted, are you sure ?"} %>
            </div>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @reg_promos %>
  </div>
<% end %>