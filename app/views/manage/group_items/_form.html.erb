<% if @group_item.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-block alert-danger fade in ">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Warning!</strong> <%= pluralize(@group_item.errors.count, "error") %>
      <% @group_item.errors.full_messages.each do |msg| %>
      <diV>
        <%= msg %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="form-group">
  <%= f.label :position, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.number_field :position %>
  </div>
</div>
<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :colour, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :colour, class: "form-control colorpicker" %>
  </div>
</div>
<br/>
<div class="form-group">
  <%= f.label "Unit Item", class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <% @unit_items.each do |item| %>
      <div class="checkbox">
        <label>
          <%= f.check_box :unit_item_ids, { :multiple => true } ,item.id, nil %>
          <%= item.name %>
        </label>
      </div>
    <% end %>
  </div>
</div>
<div class="pull-right">
  <%= f.submit 'Save', class: "btn btn-bricky" %>
  <%= link_to '<i class="icon-circle-arrow-left"></i> Back'.html_safe, manage_group_items_path, class: "btn btn-dark-grey" %>
</div>
