<% if @page_content.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-block alert-danger fade in ">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Warning!</strong> <%= pluralize(@page_content.errors.count, "error") %>
      <% @page_content.errors.full_messages.each do |msg| %>
      <diV>
        <%= msg %>
      </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="form-group">
  <%= f.label :choice_content, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <b><%= @page_content.category %></b>
  </div>
</div>
<div class="form-group">
  <%= f.label :title, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>
</div>
<div class="form-group">
  <%= f.label :picture, class: "col-sm-2 control-label" %>
  <br>
  <div class="col-sm-9">
    <div class="fileupload fileupload-new" data-provides="fileupload">
      <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
        <%= image_tag @page_content.picture.url(:medium) %>
      </div>
      <div>
        <div class="btn btn-light-grey btn-file">
          <span class="btn btn-file btn-light-grey">
            <i class="icon-folder-open-alt"></i> 
            <span class="fileupload-new">Select file</span>
            <span class="fileupload-exists">Change</span>
            <%= f.file_field :picture, class: "file-input" %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="form-group">
  <%= f.label :description, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_area :description, class: "ckeditor form-control", required: true %>
  </div>
</div>
<div class="pull-right">
  <%= f.submit 'Save', class: "btn btn-bricky" %>
  <%= link_to '<i class="icon-circle-arrow-left"></i> Back'.html_safe, manage_page_contents_path, class: "btn btn-dark-grey" %>
</div>
