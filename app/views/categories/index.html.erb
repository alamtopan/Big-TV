<%= render layout: 'shareds/back_office/prepare_table', 
           locals: {
                     table_name:  'Categories', 
                     button_name: 'Category'
                   } do %>
  <table class="table table-hover" id="sample-table-1">
    <thead>
      <tr>
        <th>No</th>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each_with_index do |category,index| %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= category.name %></td>
          <td>
            <%= render partial: 'shareds/back_office/action_buttons', locals: {resource: category, confirmation: "#{category.name} will be deleted, are you sure ?"} %>
            </div>
          </td>
        </tr>  
      <% end %>
    </tbody>
  </table>
  <div>
    <%= paginate @categories %>
  </div>
<% end %>