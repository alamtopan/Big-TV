<div id="head_bander">
	<header class="wraper head" id="nav">
		<div class="mask"></div>
		<section class="head-els">
			<div class="logo" onclick="$('.menu li a').first().click();">
				<%= link_to "#{image_tag 'bigtv.png', height: '80px',class: "lazy"}".html_safe, root_path %>
			</div>
			<ul class="menu h-pc">
				<li><a href="#intro" class="selected">intro</a></li>
				<li><a href="#features">fitur</a></li>
				<li><a href="#team">channel</a></li>
				<li><a href="#plan">paket</a></li>
				<li><a href="#map">lokasi</a></li>
				<li><a href="#blog">berita</a></li>
				<li><a href="#support" onclick="window.location='/support'">support</a></li>
			</ul>
			<% if current_user %>
				<div class="btn-group log-data">
				  <button class="btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown">
				    <img src="/assets/avatar-1-small.jpg" class="circle-img" id="sml" alt="">
				    <%= current_user.email %> <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu">
				  	<li>
							<%= link_to "<i class='clip-user-2'></i>Dashboard".html_safe, dashboard_path %>
						</li>
						<li class="divider"></li>
						<li>
							<%= link_to "<i class='clip-user-2'></i>List Subscriptions".html_safe,  manage_orders_path %>
						</li>
						<li class="divider"></li>
						<li>
							<%= link_to "<i class='clip-user-2'></i>Add Subscription".html_safe,  new_customer_manage_orders_path %>
						</li>
						<li class="divider"></li>
				    <li>
							<%= link_to "<i class='clip-user-2'></i>My Profile".html_safe, edit_manage_user_path(current_user) %>
						</li>
						<li class="divider"></li>
						<li>
							<%= link_to "<i class='clip-exit'></i>SignOut".html_safe, destroy_user_session_path, :method => :delete %>
						</li>
				  </ul>
				</div>
			<% else %>
				<%= link_to cara_berlangganan_path do %>
					<div class="login">DAFTAR SEKARANG</div>
				<% end %>
			<% end %>
			<div class="mbl-menu" id="mbl-button">
				<div class="mbl_menu_el"></div>
				<div class="mbl_menu_el"></div>
				<div class="mbl_menu_el"></div>
			</div>
			<ul class="mbl_menu_cont" id="mbl-menu">
				<li><a href="#features">fitur</a></li>
				<li><a href="#team">channel</a></li>
				<li><a href="#plan">paket</a></li>
				<li><a href="#map">lokasi</a></li>
				<li><a href="#blog">berita</a></li>
				<li><a href="#support">support</a></li>
			</ul>
			<div class="clear"></div>
		</section>
	</header>
</div>
