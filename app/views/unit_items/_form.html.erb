<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :logo, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= image_tag @unit_item.logo.url(:medium) %>
    <%= f.file_field :logo %>
  </div>
</div>
<div class="form-group">
  <%= f.label :group_item_id, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.select :group_item_id, options_from_collection_for_select(@group_id, :id, :name), {prompt: "--Please Select Group--"}, class: "form-control" %>
  </div>
</div>
<div class="pull-right">
  <%= f.submit 'Save', class: "btn btn-bricky" %>
  <%= link_to '<i class="icon-circle-arrow-left"></i> Back'.html_safe, group_items_path, class: "btn btn-dark-grey" %>
</div>

