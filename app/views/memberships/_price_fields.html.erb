<div class="panel-body">
  <div class="form-group">
    <div class="col-sm-3">
      <%= f.label :total_period,"Periode" %>
      <%= f.text_field :total_period, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.label :periode_name %>
      <%= f.select :periode_name, @periode_name, {}, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control" %>
    </div>
    <div class="col-sm-3">
      <%= link_to_remove_association '<i class="icon-remove-sign"></i>'.html_safe, f, { :confirm => 'Are you sure?', wrapper_class: 'form-group'} %>
    </div>
  </div>
</div>