<%= render layout: 'shareds/back_office/prepare_table', 
           locals: {
                     table_name:  'Subscriptions', 
                     button_name: 'Subscription'
                   } do %>

  <table class="table table-hover" id="sample-table-1">
    <thead>
      <tr>
        <th>No</th>
        <th>No Transaksi</th>
        <th>Subsciber</th>
        <th>Period</th>
        <th>Total</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each_with_index do |order,index| %>
        <tr>
          <th><%= index+1 %></th>
          <th><%= order.code %></th>
          <th><%= order.orderable.profile.first_name if order.orderable %></th>
          <th><%= "#{order.period} #{order.period_name}" %></th>
          <th><%= order.total %></th>
          <th><%= order.status %></th>
          <th>
            <div class="pull-right btn-group btn-group-sm visible-md visible-lg hidden-sm hidden-xs">
              <%= link_to order_path(order), class: 'btn btn-default' do %>
                <i class="icon-share"></i> Show
              <% end %>
            </div>
          </th>
        </tr>  
      <% end %>
   </tbody>
  </table>
  <div>
    <%= paginate @orders %>
  </div>
  
<% end %>