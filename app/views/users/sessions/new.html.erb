<div class="box-login">
	<h3>Sign in</h3>
	<p>
		Please enter your name and password to log in.
	</p>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),html:{class: "form-login"}) do |f| %>
		<div class="errorHandler alert alert-danger no-display">
			<i class="icon-remove-sign"></i> You have some form errors. Please check below.
		</div>
		<fieldset>
			<div class="form-group">
				<span class="input-icon">
					<%= f.email_field :email, class: "form-control", placeholder: "Username or Email", :autofocus => true %>
					<i class="icon-user"></i> </span>
			</div>
			<div class="form-group form-actions">
				<span class="input-icon">
					<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
					<i class="icon-lock"></i>
					<br>
					<%= link_to "Forgot your password?", new_password_path(resource_name) %>
				</span>
			</div>
			<div class="form-actions">
				<button type="submit" class="btn btn-bricky pull-right">
					Submit <i class="icon-circle-arrow-right"></i>
				</button>
			</div>
			<div class="new-account">
			</div>
		</fieldset>
	<% end %>
</div>
