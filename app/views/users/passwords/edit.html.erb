<div class="box-login">
	<h3>Change your password</h3>
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put,class: "form-login" }) do |f| %>
		<div class="errorHandler alert alert-danger no-display">
			<i class="icon-remove-sign"></i> You have some form errors. Please check below.
		</div>
		<fieldset>
			<%= f.hidden_field :reset_password_token %>
			<div class="form-group">
				<span class="input-icon">
					<%= f.password_field :password, class: "form-control", :autofocus => true %>
					<i class="icon-envelope"></i> </span>
			</div>
			<div class="form-group">
				<span class="input-icon">
					<%= f.password_field :password_confirmation, class: "form-control", :autofocus => true%>
					<i class="icon-envelope"></i> </span>
			</div>
			<div class="form-actions">
				<button type="submit" class="btn btn-bricky pull-right">
					Change my password <i class="icon-circle-arrow-right"></i>
				</button>
			</div>
		</fieldset>
	<% end %>
</div>
