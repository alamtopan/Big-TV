<div class="box-login">
	<h3>Forget Password?</h3>
	<p>
		Enter your e-mail address below to reset your password.
	</p>
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,class: "form-login"}) do |f| %>
		<div class="errorHandler alert alert-danger no-display">
			<i class="icon-remove-sign"></i> You have some form errors. Please check below.
		</div>
		<fieldset>
			<div class="form-group">
				<span class="input-icon">
					<%= f.email_field :email, class: "form-control", placeholder: "Email", :autofocus => true %>
					<i class="icon-envelope"></i> </span>
			</div>
			<div class="form-actions">
				<%= link_to "Back to Login?", new_session_path(resource_name) %>
				<button type="submit" class="btn btn-bricky pull-right">
					Send me reset password <i class="icon-circle-arrow-right"></i>
				</button>
			</div>
		</fieldset>
	<% end %>
</div>