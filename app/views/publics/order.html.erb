											<tbody>
										</table>
										<div class="hr"></div>
										<table class="tbl_order">
											<tbody>
												<tr>
													<td><div style="float:right"><span class="title_ord">TOTAL</span></div></td>
													<td><div class="nominal">Rp.<b>650.000</b></div></td>
												</tr>
											<tbody>
										</table>
									</div>
								</div>

								<div class="col-md-6">
									<div class="form-group">
										<div class="br"></div>
										<div class="br"></div>
										<%= image_tag "visa.png", style:"margin-right:5px"%><%= image_tag "master.png"%>
										<div class="br"></div>
										Pilih Pembayaran
										<div class="br"></div>
										<select name="mm" id="mm" class="form-control">
											<option value="01">1 Bulan</option>
											<option value="02">2 Bulan</option>
