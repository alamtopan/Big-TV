<div class="form-group">
  <%= f.label :name, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :colour, class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <%= f.text_field :colour, class: "form-control" %>
  </div>
</div>
<br/>
<div class="form-group">
  <%= f.label "Unit Item", class: "col-sm-2 control-label" %>
  <div class="col-sm-9">
    <% @unit_item.each do |item| %>
      <label class="checkbox-inline">
        <%= f.check_box :unit_item_ids, { :multiple => true } ,item.id, nil %>
        <%= item.name %>
      </label>
    <% end %>
  </div>
</div>
<div class="form-group">
  <div class="col-sm-9">
    <%= f.submit 'Save', class: "btn btn-bricky" %>
    <%= link_to '<i class="icon-circle-arrow-left"></i> Back'.html_safe, group_items_path, class: "btn btn-dark-grey" %>
  </div>
</div>
